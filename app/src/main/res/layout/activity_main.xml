<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#551947"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="#ffffff"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fly to Seoul"
        android:drawableLeft="@drawable/vector"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:drawablePadding="37.5dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 Adult, Economy"


        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/carbon_user_filled"
        android:drawablePadding="10dp"

        android:textColor="#ffffff"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soeal, Korea"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/gridicons_location"
        android:drawablePadding="10dp"

        android:textColor="#ffffff"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Destination"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/ic_baseline_flight"
        android:drawablePadding="10dp"
        android:textColor="#ffffff"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slect Dates"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/bx_bx_calendar"
        android:drawablePadding="10dp"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_gravity="bottom"
        android:layout_marginTop="200dp"



        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore flights by destination"
            android:textColor="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/khumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khumbu valley, Nepal"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/khumbu_valley_1"
            android:drawablePadding="10dp"
            android:hint="Non stop %h 16m+"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/line_5__1_"
            />
        <TextView
            android:id="@+id/maldives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maldives, South Asia"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/maldives_2"
            android:layout_marginTop="5dp"

            android:drawablePadding="10dp"
            />


    </LinearLayout>





</LinearLayout>